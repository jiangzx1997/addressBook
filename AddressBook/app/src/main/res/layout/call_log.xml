<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallLog">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/number_input"
        android:hint="请输入电话号码"
        android:gravity="center_horizontal"
        android:inputType="number" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:text="日期"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/call_log_listview"
        android:layout_below="@id/number_input"
        android:layout_above="@id/date"/>

    <TextView
        android:id="@+id/call_frequent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="总通话数："
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/call_frequent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/call_frequent1"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="call_frequent"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/call_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="总通话时长："
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/call_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/call_time1"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="call_time"
        android:gravity="center_horizontal" />
</RelativeLayout>